<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.example.asteroids"
    android:versionCode="1"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AsteroidsTheme" >
        <activity
            android:name="org.example.asteroids.Asteroids"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.example.asteroids.About"
            android:label="@string/label_about"
            android:theme="@android:style/Theme.Dialog"
            android:textColor="@color/holo_blue_dark" >
        </activity>
        <activity
            android:name="org.example.asteroids.Preferences"
            android:label="@string/label_preferences" 
            android:theme="@style/AsteroidsPreferences">
        </activity>
        <activity
            android:name="org.example.asteroids.Scores"
            android:label="@string/label_score" >
        </activity>
    </application>

</manifest>