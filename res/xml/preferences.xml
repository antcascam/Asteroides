<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferences_main" >

    <CheckBoxPreference
        android:key="music"
        android:summary="@string/playmusic_subtitle"
        android:title="@string/playmusic" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/graphicTypes"
        android:entryValues="@array/graphicTypesValues"
        android:key="graphics"
        android:summary="@string/graphics_subtitle"
        android:title="@string/graphics" />

    <EditTextPreference
        android:defaultValue="3"
        android:key="fragments"
        android:summary="@string/fragments_subtitle"
        android:title="@string/fragments" />

</PreferenceScreen>